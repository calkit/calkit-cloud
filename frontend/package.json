    "@tanstack/react-query": "^5.51.23",
    "@tanstack/react-query-devtools": "^5.51.23",
    "@tanstack/react-router": "^1.48.1",
    "axios": "^1.7.4",
    "form-data": "4.0.0",
    "framer-motion": "11.3.28",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.0.13",
    "react-hook-form": "7.52.2",
    "react-icons": "5.3.0",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
